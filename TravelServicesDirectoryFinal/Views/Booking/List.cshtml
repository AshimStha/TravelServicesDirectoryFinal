<!--Defining the Booking model as an IEnumerable list-->
<!--Was changed to BookingDto to access the packages data-->
@model IEnumerable<TravelServicesDirectoryFinal.Models.BookingDto>

@{
    ViewBag.Title = "Bookings";
}


<!--The container-->
<div class="list-group">
    <div class="row h-25 d-flex justify-content-between mb-5">
        <div class="col d-flex justify-content-start">
            <!--Link to go back to the home page-->
            <a class="btn btn-success me-2 bkng_home_btn" href="/Home/Index">Home</a>
            <!--Link to go back to the home page-->
            <a class="btn btn-primary bkng_new_btn" href="/Booking/New">New Booking</a>
        </div>
        <div class="col d-flex justify-content-end">
            <!--Form to search for a booking entry-->
            <form class="mb-4" action="/Teacher/List" method="GET">
                <input type="text" name="SearchKey" autocomplete="off" placeholder="Search a booking" />
                <input type="submit" value="Search" />
            </form>
        </div>
    </div>

    <div class="row text-center">
        <h1>Bookings List</h1>
    </div>

    <div class="row d-flex">
        <!--Table to list the booking entries-->
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Package Name</th>
                    <th>Booked On</th>
                    <th>Status</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!--Looping through every instance of a booking-->
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.BookingId</td>
                        <td><a class="text-decoration-none text-danger" href="/Booking/Details/@booking.BookingId">@booking.Name</a></td>
                        <td>@booking.BookingDate</td>
                        <td>@booking.Status</td>
                        <!--Delete Booking-->
                        <td><a href="/Booking/DeleteConfirm/@booking.BookingId" class="btn btn-danger">Delete</a></td>
                        <!--Update Booking-->
                        <td><a href="/Booking/Edit/@booking.BookingId" class="btn btn-primary">Update</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>