<!--Defining the Customer model-->
<!--Was changed to CustomerDto to access the customers data-->
@model TravelServicesDirectoryFinal.Models.CustomerDto

@{
    ViewBag.Title = "Customer Details";
}

<h2>Details</h2>

<!--Link to to back to the customers list page-->
<a href="/Customer/List">Go back to Customers list</a>
<h2>@Model.Firstname @Model.Lastname</h2>
<div>D.O.B: @Model.DOB</div>
<div>Address: @Model.Address</div>
<div>Email: @Model.Email</div>


<div class="container mt-2 mb-5">
    <div class="card w-50">
        <h5 class="card-header"><span class="fw-bold">@Model.Firstname @Model.Lastname</span></h5>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h5 class="card-title text-danger fs-3 pb-3">@Model.StudentFname @Model.StudentLname</h5>
                </div>

                <!--Delete Student-->
                <div class="col-md-2 d-flex justify-content-end align-items-center">
                    <a href="/Student/DeleteConfirm/@Model.StudentId" class="btn btn-danger">Delete</a>
                </div>

                <!--Update Student-->
                <div class="col-md-2 d-flex justify-content-start align-items-center">
                    <a href="/Student/Update/@Model.StudentId" class="btn btn-primary">Update</a>
                </div>
            </div>
            <p class="card-text"><span class="fw-bold">Student ID:</span> @Model.StudentId</p>
            <p class="card-text"><span class="fw-bold">Enroll date:</span> @Model.EnrollDate</p>
            <a href="#" class="btn btn-primary">Contact</a>
        </div>
    </div>
</div>