﻿@model TravelServicesDirectoryFinal.Models.CustomerDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Customer Details</h2>

<form method="POST" action="/Customer/Update/@Model.CustomerId">
    <input type="text" style="display:none;" name="CustomerId" value="@Model.CustomerId" />

    <div>
        <label>Firstname:</label> <input type="text" name="FirstName" value="@Model.Firstname" />
    </div>
    <div>
        <label>Lastname:</label> <input type="text" name="LastName" value="@Model.Lastname" />
    </div>
    <div>
        <label>Date of Birth:</label> <input type="date" name="DOB" value="@Model.DOB" />
    </div>
    <div>
        <label>Address:</label> <input type="text" name="Address" value="@Model.Address" />
    </div>
    <div>
        <label>Email:</label> <input type="text" name="Email" value="@Model.Email" />
    </div>
    <div>
        <label>Phone:</label> <input type="text" name="Phone" value="@Model.Phone" />
    </div>

    <input type="submit" value="Update" />
    </div>

</form>